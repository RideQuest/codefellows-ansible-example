description "django-imager"

start on (filesystem)
stop on runlevel [016]

respawn
setuid www-data
setgid www-data
chdir {{ django_home }}
env DJANGO_SETTINGS_MODULE=imagersite.production
env DATABASE_URL={{ db_url }}
exec gunicorn -b 127.0.0.1:8000 -w 4 --log-file /tmp/imagersite.log --error-logfile /tmp/imagersite_error.log --access-lo$ess-logfile /tmp/imagersite_access.log imagersite.wsgi



