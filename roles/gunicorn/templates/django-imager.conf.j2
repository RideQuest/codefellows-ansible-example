description "django-imager"

start on (filesystem)
stop on runlevel [016]

respawn
setuid www-data
setgid www-data
chdir {{ django_home }}/imagersite
env DJANGO_SETTINGS_MODULE=imagersite.production
env DATABASE_URL={{ db_url }}
env EMAIL_HOST={{ email_host }}
env EMAIL_USE_TLS={{ email_use_tls }}
env EMAIL_PORT={{ email_port }}
env EMAIL_HOST_USER={{ email_host_user }}
env EMAIL_HOST_PASSWORD={{ email_host_password }}
env DEFAULT_EMAIL_FROM={{ default_email_from }}
exec gunicorn -b 127.0.0.1:8000 -w 4 imagersite.wsgi
